# ZKStack BSC 部署环境变量配置

# ===========================================
# 网络配置
# ===========================================
# BSC Mainnet: 56, BSC Testnet: 97
L1_CHAIN_ID=97

# BSC RPC URLs
# Mainnet: https://bsc-dataseed.binance.org/
# Testnet: https://bsc-testnet-dataseed.bnbchain.org
L1_RPC_URL=https://bsc-testnet-dataseed.bnbchain.org

# ===========================================
# 数据库配置
# ===========================================
DB_PASSWORD=your_very_secure_password_here
DB_NAME=zk_bsc_testnet

# ===========================================
# 钱包配置 (请使用你自己的私钥)
# ===========================================
# 操作员私钥 (用于发送交易)
OPERATOR_PRIVATE_KEY=0x1234567890abcdef...

# 治理者私钥 (用于管理操作)
GOVERNOR_PRIVATE_KEY=0x1234567890abcdef...

# ===========================================
# 服务配置
# ===========================================
# API端口
API_WEB3_JSON_RPC_HTTP_PORT=3050
API_WEB3_JSON_RPC_WS_PORT=3051
API_PROMETHEUS_PORT=3312
API_HEALTHCHECK_PORT=3081

# ===========================================
# 监控配置
# ===========================================
# Grafana 管理员密码
GRAFANA_PASSWORD=admin

# ===========================================
# 日志配置
# ===========================================
# 日志级别: error, warn, info, debug, trace
RUST_LOG=info

# 启用错误堆栈跟踪
RUST_BACKTRACE=1

# ===========================================
# 安全配置
# ===========================================
# JWT 密钥 (用于API认证，可选)
JWT_SECRET=your_jwt_secret_here

# API 访问密钥 (可选)
API_KEY=your_api_key_here

# ===========================================
# 性能配置
# ===========================================
# 数据库连接池大小
DB_POOL_SIZE=10

# HTTP 请求超时 (秒)
HTTP_TIMEOUT=60

# WebSocket 连接超时 (秒)
WS_TIMEOUT=3600

# ===========================================
# 高级配置
# ===========================================
# 启用调试模式 (仅开发环境)
DEBUG_MODE=false

# 启用详细日志
VERBOSE_LOGGING=false

# 自定义配置文件路径
CUSTOM_CONFIG_PATH=/app/configs/custom.yaml